<%= form_with(model: @question, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <%= form.simple_fields_for :answers do |attach| %>
    <%= attach.input :attachment, as: :file, label: 'Attach file' %>
  <% end %>

  <div class="actions">
    <%= form.submit :Create %>
  </div>
<% end %>