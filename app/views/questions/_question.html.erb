<%# _question.html.erb %>
<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to question.title, question_path(question), class: "text-decoration-none" %>
    </h5>
    <p class="card-text">
      <%= truncate(question.body, length: 200) || 'Без описания' %>
    </p>
    <div class="d-flex justify-content-between align-items-center">
      <small class="text-muted">
        <i class="bi bi-person-circle me-1"></i>
        Автор: <%= question.user.email %>
      </small>
      <%= link_to "Подробнее", question_path(question), class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
</div>