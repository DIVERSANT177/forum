$('#answer_errors').empty();

<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |m| %>
        
        $('#answer_errors').append($('<div>').html('<%= j m %>'))
    <% end %>
<% else %>
    $('.answers').append('<%= j render(@answer) %>');
    $("form")[0].reset();
<% end %>